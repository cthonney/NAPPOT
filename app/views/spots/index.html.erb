<div class="background">
  <div class="container">
    <div id="add-spot-box">
      <h2>Qu'est ce que vous attendez pour ajouter votre spot?</h2>
      <div id="button">
        <%= link_to 'New Spot', new_spot_path, class:"btn btn-info btn-lg" %>
      </div>
    </div>
    <p id="notice"><%= notice %></p>
    <div class="cards">
      <% @spots.each do |spot| %>
        <div class="card-product">
          <%= cl_image_tag(spot.photos.first.key, :width => 300, :height => 200, :crop => :fill)%>
          <div class="card-product-infos">
            <h2><%= spot.title %></h2>
            <p><i class="fas fa-map-marker"> </i> <%= spot.address %></p>
            <p><i class="fas fa-coins"> </i> <%=  spot.price %> MUR</p>
            <div id="button">
              <%= link_to 'Show', spot, class: "btn btn-outline-secondary btn-sm"%>
              <%= link_to 'Edit', edit_spot_path(spot), class: "btn btn-outline-secondary btn-sm"%>
            </div>
            <%= link_to '', spot, method: :delete, data: { confirm: 'Are you sure?' }, class: "fa fa-trash btn-sm"  %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
