<div class="background">
  <div class="container" >
    <div class="card-show" >
      <div class="container" >
        <h1>
          <%= @spot.title %>
        </h1>
        <i class="fas fa-map-marker"></i> <%= @spot.address %>
        <br>
       <i class="fas fa-bed"></i> <%= @spot.capacity %>
        <br>
        <i class="fas fa-stream"></i> <%= @spot.description %>
        <br>
        <i class="fas fa-coins"></i> <%= @spot.price %>
        <br>
      </div>
      <div class="container" >
        <%= render 'shared/carouselshow', spot: @spot %>
        <br>
        <%= link_to 'Edit', edit_spot_path(@spot), :class => "btn btn-outline-secondary btn-sm" %> |
        <%= link_to 'Back', spots_path, :class => "btn btn-outline-secondary btn-sm" %>
        <%# <%= link_to 'Book this Spot', spots_path, :class => "btn btn-outline-info" %>
      </div>
      <br>
      <div class="form-wrapper">
        <%= simple_form_for [@spot, @booking] do |f| %>
          <div class="form-inputs">
            <%= f.input :date,
                    as: :string,
                    required: true,
                    autofocus: true,

                    input_html: { id: "date", class: "d-none"}%>
          </div>
          <div class="form-actions">
            <%= f.button :submit, :class => "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <!-- [...] -->
  <div id="booking-date"
     data-bookings="<%= @bookings_dates.to_json %>">
    <%# d-none = class bootstrap pour masquer %>
