<div class="mx-auto" style="width: 400px;" >
  <p id="notice"><%= notice %></p>
  <div>
    <p>
      <strong>Name:</strong>
      <%= @spot.title %>
    </p>
    <p>
      <strong>Address:</strong>
      <%= @spot.address %>
      <strong>Capacity:</strong>
      <%= @spot.capacity %>
      <strong>Description:</strong>
      <%= @spot.description %>
      <strong>Price:</strong>
      <%= @spot.price %>
    </p>
    <%= link_to 'Edit', edit_spot_path(@spot), :class => "btn btn-warning" %> |
    <%= link_to 'Back', spots_path, :class => "btn btn-secondary" %>
  </div>
  <div class="container">
    <br>
    <small><em class="text-muted">Not available</em></small>
    Book this Spot !
  </div>
</div>
